void setup()   {                
  Serial.begin(115200);
  pinMode(12, INPUT); // left
  pinMode(13, INPUT); // right
  pinMode(14, INPUT); // center
  
  display.begin(SSD1306_SWITCHCAPVCC, 0x3C);
  display.display();
  delay(2000);
  display.clearDisplay();
  display.display();
}


void loop() {
  if (digitalRead(14) == 1) {
    display.clearDisplay();
    display.drawBitmap(32, 10, eye_center, 64, 44, 1);
    display.display();
    Serial.println("CENTER");
  } else if (digitalRead(13) == 1) {
    display.clearDisplay();
    display.drawBitmap(42, 10, eye_center, 64, 44, 1);
    display.display();
    Serial.println("LEFT");
  } else if (digitalRead(12) == 1) {
    display.clearDisplay();
    display.drawBitmap(22, 10, eye_center, 64, 44, 1);
    display.display();
    Serial.println("RIGHT");
  }

  delay(10);
}


